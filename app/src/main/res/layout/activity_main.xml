<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    tools:context=".MainActivity"
    android:background="#4B4545">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        android:background="#E0E0E0"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/gridlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/gridlayout"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
<!--here column and row count used which help to tablelised the button-->

<!--here style.xml is used in values folder to costomise the button costomsation name is Calcula... -->
        <Button
            android:id="@+id/button7"
            android:text="7" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button8"
            android:text="8" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button9"
            android:text="9" style="@style/CalculatorButtonStyle" />

        <Button
            android:id="@+id/buttondivide"
            style="@style/CalculatorButtonStyle"
            android:text="/" />

        <Button
            android:id="@+id/button4"
            android:text="4" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button5"
            android:text="5" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button6"
            android:text="6" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/buttonmul"
            android:text="*" style="@style/CalculatorButtonStyle" />

        <Button
            android:id="@+id/button1"
            android:text="1" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button2"
            android:text="2" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button3"
            android:text="3" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/buttonmin"
            android:text="-" style="@style/CalculatorButtonStyle" />

        <Button
            android:id="@+id/buttonclear"
            android:text="C" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/button0"
            android:text="0" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/buttonequal"
            android:text="=" style="@style/CalculatorButtonStyle" />
        <Button
            android:id="@+id/buttonsum"
            android:text="+" style="@style/CalculatorButtonStyle" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>